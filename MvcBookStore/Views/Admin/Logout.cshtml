
@{
    ViewBag.Title = "Logout";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Đăng Xuất - Admin Panel</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
</head>
<body class="bg-slate-50">
    <div class="flex min-h-screen items-center justify-center">
        <div class="bg-white p-8 rounded-lg shadow-sm max-w-md w-full mx-4">
            <div class="text-center mb-6">
                <i class="fa fa-sign-out-alt text-4xl text-red-500 mb-4"></i>
                <h2 class="text-2xl font-bold text-gray-800">Xác Nhận Đăng Xuất</h2>
                <p class="text-gray-600 mt-2">Bạn có chắc chắn muốn đăng xuất khỏi hệ thống?</p>
            </div>

            <div class="flex flex-col gap-3">
                @using (Html.BeginForm("Logout", "Admin", FormMethod.Post))
                {
                    <button type="submit" class="w-full py-2 px-4 bg-red-500 text-white rounded-lg hover:bg-red-600 transition-colors">
                        <i class="fa fa-sign-out-alt mr-2"></i>Xác Nhận Đăng Xuất
                    </button>
                }
                <a href="@Url.Action("Index", "Admin")" class="w-full py-2 px-4 bg-gray-100 text-gray-700 rounded-lg hover:bg-gray-200 transition-colors text-center">
                    <i class="fa fa-arrow-left mr-2"></i>Quay Lại
                </a>
            </div>
        </div>
    </div>
</body>
</html>

