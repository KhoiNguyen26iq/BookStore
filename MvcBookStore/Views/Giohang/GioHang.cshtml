@using MvcBookStore.Models
@model List<Giohang>
@{
    ViewBag.Title = "Giỏ hàng";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<style>
    .cart-container {
        max-width: 1200px;
        margin: 2rem auto;
        padding: 0 1rem;
    }

    .cart-table {
        width: 100%;
        border-collapse: collapse;
        background: white;
        box-shadow: 0 2px 15px rgba(0, 0, 0, 0.1);
        border-radius: 8px;
        overflow: hidden;
    }

        .cart-table th {
            background: #2c3e50;
            color: white;
            padding: 15px;
            text-transform: uppercase;
            font-size: 0.9rem;
            font-weight: 600;
        }

        .cart-table td {
            padding: 15px;
            border-bottom: 1px solid #eee;
            vertical-align: middle;
        }

    .cart-image {
        width: 100px;
        height: 150px;
        object-fit: cover;
        border-radius: 4px;
        transition: transform 0.2s;
    }

        .cart-image:hover {
            transform: scale(1.05);
        }

    .quantity-input {
        width: 70px;
        padding: 8px;
        border: 1px solid #ddd;
        border-radius: 4px;
        text-align: center;
    }

    .btn-update {
        background: #27ae60;
        color: white;
        border: none;
        padding: 8px 15px;
        border-radius: 4px;
        cursor: pointer;
        transition: background 0.3s;
    }

        .btn-update:hover {
            background: #219a52;
        }

    .link-detail {
        color: #3498db;
        text-decoration: none;
        font-weight: 600;
        transition: color 0.3s;
    }

        .link-detail:hover {
            color: #2980b9;
        }

    .link-delete {
        color: #e74c3c;
        text-decoration: none;
        font-weight: 600;
        transition: color 0.3s;
    }

        .link-delete:hover {
            color: #c0392b;
        }

    .cart-summary {
        background: #f8f9fa;
        padding: 15px;
        font-weight: 600;
    }

    .cart-actions {
        padding: 15px;
        text-align: right;
    }

    .btn-order {
        background: #2c3e50;
        color: white;
        text-decoration: none;
        padding: 10px 20px;
        border-radius: 4px;
        transition: background 0.3s;
    }

        .btn-order:hover {
            background: #34495e;
        }

    .empty-cart {
        color: #e74c3c;
        text-decoration: none;
        margin-right: 20px;
    }
</style>

<div class="cart-container">
    <h2 class="text-center mb-4">@ViewBag.Title</h2>

    <table class="cart-table">
        <thead>
            <tr>
                <th>Tên Sách</th>
                <th>Ảnh Bìa</th>
                <th>Số Lượng</th>
                <th>Đơn Giá</th>
                <th>Thành Tiền</th>
                <th colspan="3">Thao Tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.sTensach</td>
                    <td>
                        <img class="cart-image" src="~/images/anhsp/@item.sAnhbia" alt="@item.sTensach" />
                    </td>
                    @using (Html.BeginForm("CapnhatGiohang", "Giohang", new { @iMaSp = item.iMasach }))
                    {
                        <td>
                            <input type="number" min="1" name="txtSoluong" value="@item.iSoluong"
                                   class="quantity-input" />
                        </td>
                        <td>@String.Format("{0:#,##0}", item.dDonggia) đ</td>
                        <td>@String.Format("{0:#,##0}", item.dThanhtien) đ</td>
                        <td>
                            <a href="@Url.Action("Details", "BookStore", new { id = item.iMasach })"
                               class="link-detail">Chi tiết</a>
                        </td>
                        <td>
                            @Html.ActionLink("Xóa", "XoaGiohang",
                                new { @iMaSp = item.iMasach },
                                new { @class = "link-delete" })
                        </td>
                        <td>
                            <button type="submit" class="btn-update">Cập Nhật</button>
                        </td>
                    }
                </tr>
            }
        </tbody>
        <tfoot>
            <tr class="cart-summary">
                <td colspan="4" class="text-right">
                    Số lượng sách: @ViewBag.Tongsoluong
                </td>
                <td colspan="4" class="text-right">
                    Tổng tiền: @String.Format("{0:#,##0}", ViewBag.Tongtien) VNĐ
                </td>
            </tr>
            <tr class="cart-actions">
                <td colspan="8">
                    @Html.ActionLink("Xóa Giỏ Hàng", "XoaTatcaGiohang", null,
                        new { @class = "empty-cart" })
                    @Html.ActionLink("ĐẶT HÀNG", "DatHang", "Giohang",
                        new { @class = "btn-order" })
                </td>
            </tr>
        </tfoot>
    </table>
</div>