@{
    ViewBag.Title = "Đăng Nhập";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<style>
body {
    background: #f5f5f5;
    margin: 0;
    padding: 0;
    min-height: 100vh;
}

.main-content {
    min-height: calc(100vh - 100px);
    padding: 40px 20px;
    background: #f5f5f5;
}

.login-container {
    max-width: 500px;
    margin: 0 auto;
    padding: 40px;
    background: white;
    border-radius: 15px;
    box-shadow: 0 0 25px rgba(0,0,0,0.1);
}

.form-title {
    text-align: center;
    color: #2c3e50;
    font-size: 32px;
    margin-bottom: 40px;
    font-weight: 700;
    text-transform: uppercase;
}

.form-group {
    margin-bottom: 25px;
}

.form-label {
    display: block;
    margin-bottom: 10px;
    color: #34495e;
    font-weight: 500;
    font-size: 16px;
}

.form-control {
    width: 100%;
    padding: 15px;
    border: 2px solid #ddd;
    border-radius: 8px;
    font-size: 16px;
    transition: all 0.3s ease;
}

.form-control:focus {
    border-color: #3498db;
    outline: none;
    box-shadow: 0 0 8px rgba(52,152,219,0.4);
}

.error-message {
    color: #e74c3c;
    font-size: 14px;
    margin-top: 8px;
    font-weight: 500;
}

.submit-btn {
    width: 100%;
    padding: 15px;
    background: #FF9900;
    color: white;
    border: none;
    border-radius: 8px;
    font-size: 18px;
    font-weight: 600;
    cursor: pointer;
    transition: background 0.3s;
    margin-top: 20px;
    text-transform: uppercase;
    letter-spacing: 1px;
}

.submit-btn:hover {
    background: #2980b9;
    transform: translateY(-2px);
    box-shadow: 0 5px 15px rgba(52,152,219,0.3);
}

.form-footer {
    text-align: center;
    margin-top: 30px;
    color: #7f8c8d;
    font-size: 16px;
    padding: 20px 0;
    border-top: 1px solid #eee;
}

.form-footer a {
    color: #FF9933;
    text-decoration: none;
    font-weight: 600;
}

.form-footer a:hover {
    text-decoration: underline;
}

@@media (max-width: 768px) {
    .login-container {
        padding: 20px;
    }

    .form-title {
        font-size: 24px;
    }
}
</style>

<div class="main-content">
    <div class="login-container">
        <h1 class="form-title">@ViewBag.Title</h1>

        @if (!string.IsNullOrEmpty(ViewBag.Thongbao))
        {
            <div class="error-message text-center mb-4">@ViewBag.Thongbao</div>
        }

        @using (Html.BeginForm())
        {
            @Html.ValidationSummary(true)

            <div class="form-group">
                <label class="form-label">Tên Đăng Nhập</label>
                @Html.TextBox("TenDN", null, new { @class = "form-control", placeholder = "Nhập tên đăng nhập" })
                <span class="error-message">@ViewData["Loi1"]</span>
            </div>

            <div class="form-group">
                <label class="form-label">Mật Khẩu</label>
                @Html.Password("Matkhau", null, new { @class = "form-control", placeholder = "Nhập mật khẩu" })
                <span class="error-message">@ViewData["Loi2"]</span>
            </div>

            <button type="submit" class="submit-btn">Đăng Nhập</button>

            <div class="form-footer">
                @*<a href="#">Quên mật khẩu?</a><br />*@
                Chưa có tài khoản? <a href="@Url.Action("DangKy", "NguoiDung")">Đăng ký ngay</a>
            </div>
        }
    </div>
</div>