@{
    ViewBag.Title = "Đăng Ký Thành Viên";
}

<style>
    body {
        background: #f5f5f5;
        margin: 0;
        padding: 0;
        min-height: 100vh;
    }

    .main-content {
        min-height: calc(100vh - 100px); /* Điều chỉnh theo chiều cao của header và footer */
        padding: 40px 20px;
        background: #f5f5f5;
    }

    .register-container {
        max-width: 800px; /* Tăng kích thước tối đa */
        margin: 0 auto;
        padding: 40px;
        background: white;
        border-radius: 15px;
        box-shadow: 0 0 25px rgba(0,0,0,0.1);
    }

    .form-title {
        text-align: center;
        color: #2c3e50;
        font-size: 32px; /* Tăng kích thước chữ */
        margin-bottom: 40px;
        font-weight: 700;
        text-transform: uppercase;
    }

    .form-group {
        margin-bottom: 25px; /* Tăng khoảng cách giữa các trường */
    }

    .form-label {
        display: block;
        margin-bottom: 10px;
        color: #34495e;
        font-weight: 500;
        font-size: 16px; /* Tăng kích thước chữ */
    }

    .form-control {
        width: 100%;
        padding: 15px; /* Tăng padding */
        border: 2px solid #ddd;
        border-radius: 8px;
        font-size: 16px;
        transition: all 0.3s ease;
    }

    .form-control:focus {
        border-color: #3498db;
        outline: none;
        box-shadow: 0 0 8px rgba(52,152,219,0.4);
    }

    .required {
        color: #e74c3c;
        margin-left: 5px;
        font-size: 18px;
    }

    .error-message {
        color: #e74c3c;
        font-size: 14px;
        margin-top: 8px;
        font-weight: 500;
    }

    .submit-btn {
        width: 100%;
        padding: 15px;
        background: #FF9900;
        color: white;
        border: none;
        border-radius: 8px;
        font-size: 18px;
        font-weight: 600;
        cursor: pointer;
        transition: background 0.3s;
        margin-top: 20px;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    .submit-btn:hover {
        background: #2980b9;
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(52,152,219,0.3);
    }

    .form-footer {
        text-align: center;
        margin-top: 30px;
        color: #7f8c8d;
        font-size: 16px;
        padding: 20px 0;
        border-top: 1px solid #eee;
    }

        .form-footer a {
            color: #FF9933;
            text-decoration: none;
            font-weight: 600;
        }

    .form-footer a:hover {
        text-decoration: underline;
    }

    .top-message {
        color: #e74c3c;
        text-align: center;
        margin-bottom: 30px;
        font-size: 16px;
        font-weight: 500;
        background: #fdeaea;
        padding: 15px;
        border-radius: 8px;
    }

    /* Layout hai cột cho form */
    .form-row {
        display: flex;
        gap: 20px;
        margin-bottom: 20px;
    }

    .form-col {
        flex: 1;
    }

    /* Responsive */
    @@media (max-width: 768px) {
        .register-container {
            padding: 20px;
        }

        .form-row {
            flex-direction: column;
            gap: 0;
        }

        .form-title {
            font-size: 24px;
        }
    }
</style>

<div class="main-content">
    <div class="register-container">
        <h1 class="form-title">Đăng Ký Thành Viên</h1>
        <div class="top-message">* Vui lòng điền đầy đủ thông tin</div>

        @using (Html.BeginForm())
        {
            @Html.ValidationSummary(true)

            <div class="form-row">
                <div class="form-col">
                    <div class="form-group">
                        <label class="form-label">Họ tên<span class="required">*</span></label>
                        @Html.TextBox("HotenKH", null, new { @class = "form-control", placeholder = "Nhập họ tên của bạn" })
                        <span class="error-message">@ViewData["Loi1"]</span>
                    </div>

                    <div class="form-group">
                        <label class="form-label">Tên đăng nhập<span class="required">*</span></label>
                        @Html.TextBox("TenDN", null, new { @class = "form-control", placeholder = "Tạo tên đăng nhập" })
                        <span class="error-message">@ViewData["Loi2"]</span>
                    </div>

                    <div class="form-group">
                        <label class="form-label">Mật khẩu<span class="required">*</span></label>
                        @Html.Password("Matkhau", null, new { @class = "form-control", placeholder = "Nhập mật khẩu" })
                        <span class="error-message">@ViewData["Loi3"]</span>
                    </div>

                    <div class="form-group">
                        <label class="form-label">Xác nhận mật khẩu<span class="required">*</span></label>
                        @Html.Password("Matkhaunhaplai", null, new { @class = "form-control", placeholder = "Nhập lại mật khẩu" })
                        <span class="error-message">@ViewData["Loi4"]</span>
                    </div>
                </div>

                <div class="form-col">
                    <div class="form-group">
                        <label class="form-label">Email<span class="required">*</span></label>
                        @Html.TextBox("Email", null, new { @class = "form-control", placeholder = "example@email.com" })
                        <span class="error-message">@ViewData["Loi5"]</span>
                    </div>

                    <div class="form-group">
                        <label class="form-label">Địa chỉ<span class="required">*</span></label>
                        @Html.TextBox("Diachi", null, new { @class = "form-control", placeholder = "Nhập địa chỉ của bạn" })
                        <span class="error-message">@ViewData["Loi6"]</span>
                    </div>

                    <div class="form-group">
                        <label class="form-label">Số điện thoại<span class="required">*</span></label>
                        @Html.TextBox("Dienthoai", null, new { @class = "form-control", placeholder = "Nhập số điện thoại" })
                        <span class="error-message">@ViewData["Loi7"]</span>
                    </div>

                    <div class="form-group">
                        <label class="form-label">Ngày sinh<span class="required">*</span></label>
                        <input type="date" name="Ngaysinh" class="form-control" />
                    </div>
                </div>
            </div>

            <button type="submit" class="submit-btn">Đăng Ký</button>

            <div class="form-footer">
                Đã có tài khoản? <a href="@Url.Action("DangNhap", "NguoiDung")">Đăng nhập ngay</a>
            </div>
        }
    </div>
</div>